{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "SmartOrganizer",
    "version": "0.9.0"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/dre-bk201/SmartOrganizer/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU4Qzc0MDk5Q0E3Q0U1RjUKUldUMTVYekttVURINk02QWJhMVhIL3B2M0hEZU80dGhuRGZUSkJaSi9jMFVyY3hGelFxWldBTUQK"
    },
    "allowlist": {
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "os": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true,
        "setFullscreen": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
